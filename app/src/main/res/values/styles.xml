<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">#E91E63</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:imageButtonStyle">
           @style/imageButtonStyle_custom
        </item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/white_grey</item>
        <item name="colorPrimaryDark">@color/white_grey</item>
        <item name="colorAccent">#E91E63</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:imageButtonStyle">
            @style/imageButtonStyle_custom
        </item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="actionMenuTextColor">@color/gray</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="imageButtonStyle_custom">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="row_title_style">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/header_item_size</item>
    </style>
</resources>
