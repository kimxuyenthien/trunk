<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/cell_background"/>

    <RelativeLayout android:id="@+id/rlProductWorldTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView android:id="@+id/ivProductWorldTitle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_productgroupitem_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="4"
            android:textSize="16sp"
            android:singleLine="false"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_productgroupitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/rlProductWorldTitle"
        android:text="@string/info"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        style="@style/row_title_style"/>

    <ImageView
        android:id="@+id/ivRightBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right_black"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ivRightWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right_white"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

</RelativeLayout>